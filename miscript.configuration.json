{
	"comments": {
		"lineComment": "//",
		"blockComment": [ "/*", "*/" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "{", "close": "}" },
		{ "open": "[", "close": "]" },
		{ "open": "(", "close": ")" },
		{ "open": "\"", "close": "\"", "notIn": ["string"] },
		{ "open": "/*", "close": " */", "notIn": ["string"] }
	],
	"indentationRules": {
		"increaseIndentPattern": "^\\s*(else|for|function|if|function|class)\\b((?!end).)*$|.*[{\\[]\\s*$",
		"decreaseIndentPattern": "^\\s*(else|else|end|}|])\\s*$"
	}
}